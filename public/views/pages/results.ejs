<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="styles/reset.css">
  <link rel="stylesheet" href="styles/base.css">
  <link rel="stylesheet" href="styles/layout.css">
  <link rel="stylesheet" href="styles/modules.css">
  <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
  <title>Results</title>
</head>
<body>
  <header>
    <%- include('../partials/nav.ejs') %>
    <h1>Results</h1>
  </header>
  <main>
    <h2>Air Quality results</h2>
    <h1><%= render.location %></h1>
    <p><%= render.aqi %></p>
    <p><%= render.aqiCategory %></p>
    <ul>
      <% render.yelpData.forEach(review => { %>
        <div>
          <li><img src="<%= review.image_url %>" alt="yelp image" height="100" width="100" ></li>
          <li><h2><%= review.name %></h2></li>
          <li><p><%= review.rating %></p></li>
        </div>
      <% }) %>
    </ul>
    <h2>Crime results (show first 10)</h2>
    <% console.log(render.crimeData) %>
    <ul>
      <% for (let i = 0; i < 10; i++) { %>
        <div>
          <li>Crime: <%= render.crimeData[i].crime_description %></li>
          <li>Neighborhood: <%= render.crimeData[i].neighborhood %></li>
        </div>
      <% } %>
    </ul>
  </main>
  <footer>
  <%- include('../partials/footer.ejs') %>
  </footer>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="app.js"></script>
</body>
</html>